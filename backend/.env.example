# Backend
PORT=8080
NODE_ENV=development

# Postgres (matches docker-compose.yml in repo root)
DATABASE_URL=postgresql://spur:spur@localhost:5432/spur_chat?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Gemini
GEMINI_API_KEY=replace_me
GEMINI_MODEL=gemini-2.5-flash

# Reply cache
CACHE_TTL_SECONDS=900

# Rate limiting (simple fixed-window defaults)
RATE_LIMIT_VISITOR_PER_MINUTE=10
RATE_LIMIT_IP_PER_MINUTE=60

# Session cap
MAX_ACTIVE_CONVERSATIONS=3
ACTIVE_CONVERSATION_TTL_MINUTES=1440
